<resources>
    <!-- Base application theme. -->
    <style name="Theme.NationalParks" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryVariant">@color/darkBrown</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown</item>
        <item name="colorSecondaryVariant">@color/lightBrown</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/darkBrown</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/superLightBrown</item>
    </style>

    <style name="NpsCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="CardTitle" parent="Widget.MaterialComponents.CardView">
        <item name="android:textSize">@dimen/font_size_headline</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>